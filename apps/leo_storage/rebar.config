{require_otp_vsn, "18|19|20"}.

{deps, [
        {leo_logger,            ".*", {git, "https://github.com/leo-project/leo_logger.git",            {tag, "2.0.0"}}},
        {leo_mq,                ".*", {git, "https://github.com/leo-project/leo_mq.git",                {tag, "2.0.0"}}},
        {leo_object_storage,    ".*", {git, "https://github.com/leo-project/leo_object_storage.git",    {tag, "2.0.2"}}},
        {leo_ordning_reda,      ".*", {git, "https://github.com/leo-project/leo_ordning_reda.git",      {tag, "1.2.10"}}},
        {leo_redundant_manager, ".*", {git, "https://github.com/leo-project/leo_redundant_manager.git", {tag, "2.0.1"}}},
        {leo_statistics,        ".*", {git, "https://github.com/leo-project/leo_statistics.git",        {tag, "2.0.0"}}},
        {leo_watchdog,          ".*", {git, "https://github.com/leo-project/leo_watchdog.git",          {tag, "2.0.0"}}},
        {meck,                  ".*", {git, "https://github.com/eproxus/meck.git",                      {tag, "0.8.6"}}},
        {sd_notify,             ".*", {git, "https://github.com/systemd/erlang-sd_notify.git",          {tag, "v1.0"}}, [raw]}
       ]}.

{erl_opts, [{d, 'NOTEST'},
            warn_obsolete_guard,
            warn_unused_import,
            warn_shadow_vars,
            warn_export_vars,
            warn_export_all,
            {platform_define, "^[0-9]+", namespaced_types},
            {parse_transform, lager_logger_transform}
           ]}.

{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{clean_files, []}.
